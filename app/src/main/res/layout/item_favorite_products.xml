<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <com.example.nikestore_tir_1403.view.NikeImageView
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_marginStart="16dp"
app:roundedCornerRadius="8dp"
        android:layout_marginTop="16dp"
        android:id="@+id/productFavoriteIv"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/productFavoriteIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/productFavoriteIv"
        app:layout_constraintTop_toTopOf="@+id/productFavoriteIv"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="16sp"
        android:id="@+id/productTitle_favorite_Tv"
        tools:text="محصول داخل لیست علاقمه مندی " />
</androidx.constraintlayout.widget.ConstraintLayout>